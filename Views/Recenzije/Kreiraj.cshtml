@model Flor.Models.Recenzija

@{
    ViewData["Title"] = "Ostavi recenziju";
}

<h2 class="text-center my-4">Ostavi recenziju</h2>

<form asp-action="Kreiraj" method="post" class="w-50 mx-auto">

    <div class="form-group mb-3">
        <label asp-for="Ime" class="form-label"></label>
        <input asp-for="Ime" class="form-control" />
        <span asp-validation-for="Ime" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Ocjena</label>
        <div class="star-rating">
            @for (int i = 1; i <= 5; i++)
            {
                <span class="star" data-value="@i">&#9733;</span>
            }
        </div>
        <input type="hidden" name="Ocjena" id="Ocjena" required />
        <span class="text-danger" asp-validation-for="Ocjena"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Sadrzaj" class="form-label"></label>
        <textarea asp-for="Sadrzaj" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Sadrzaj" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Pošalji recenziju</button>
</form>

@section Scripts {
    <script>
        const stars = document.querySelectorAll('.star');
        const ocjenaInput = document.getElementById('Ocjena');

        stars.forEach((star, index) => {
            star.addEventListener('click', () => {
                const value = index + 1;
                ocjenaInput.value = value;

                // Ukloni sve prethodne zvjezdice
                stars.forEach(s => s.classList.remove('selected'));

                // Označi odabrane zvjezdice
                for (let i = 0; i < value; i++) {
                    stars[i].classList.add('selected');
                }
            });
        });
    </script>
}