@model Flor.Models.Narudzba

@{
    ViewData["Title"] = "Potvrda narudžbe";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center mb-3 text-success">Hvala na narudžbi, @Model.ImePrezime!</h2>
        <p class="text-center text-muted">Vaša narudžba je uspješno zaprimljena i uskoro će biti obrađena.</p>

        <hr />

        <section class="mb-4">
            <h4 class="mb-3">📦 Podaci o narudžbi</h4>
            <ul class="list-group">
                <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                <li class="list-group-item"><strong>Način dostave:</strong> @Model.NacinDostave</li>
                @if (Model.NacinDostave == "Adresa")
                {
                    <li class="list-group-item"><strong>Adresa:</strong> @Model.Adresa</li>
                }
                <li class="list-group-item"><strong>Datum isporuke:</strong> @Model.DatumIsporuke.ToShortDateString()</li>
                <li class="list-group-item"><strong>Napomena:</strong> @Model.Napomena</li>
            </ul>
        </section>

        <section>
            <h4 class="mb-3">🧾 Stavke narudžbe</h4>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Buket</th>
                            <th>Veličina</th>
                            <th>Količina</th>
                            <th>Cijena po komadu</th>
                            <th>Ukupno</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.Stavke)
                        {
                            var naziv = Model.Stavke.FirstOrDefault(st => st.BuketId == s.BuketId)?.Buket?.Naziv ?? "Buket";
                            <tr>
                                <td>@naziv</td>
                                <td>@s.Velicina</td>
                                <td>@s.Kolicina</td>
                                <td>@s.Cijena.ToString("0.00") €</td>
                                <td>@((s.Cijena * s.Kolicina).ToString("0.00")) €</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <h5 class="text-end mt-3"><strong>Ukupno:</strong> @Model.UkupnaCijena.ToString("0.00") €</h5>
        </section>

        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Buketi")" class="btn btn-success px-4">Povratak na ponudu</a>
        </div>
    </div>
</div>
