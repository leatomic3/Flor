@model IEnumerable<Flor.Models.Buket>

@{
    ViewData["Title"] = "Ponuda buketa";
}

@if (TempData["Uspjeh"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Uspjeh"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2 class="text-center mt-4 mb-2" style="color: #2e7d32; font-weight: 700;">Naša ponuda</h2>
<p class="text-center mb-4" style="color: #555; font-size: 1.1rem;">
    U ponudi imamo raznovrsne bukete, aranžmane i cvjetne dekoracije za sve prigode – od rođendana do vjenčanja.
</p>

@if (User.IsInRole("Admin"))
{
    <div class="text-center mb-4">
        <a class="btn btn-success" href="@Url.Action("Create", "Buketi")">
            ➕ Dodaj novi buket
        </a>
    </div>
}

<div class="container">
    <div class="row justify-content-center g-4">
        @foreach (var buket in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 d-flex">
                <div class="card shadow-sm w-100" style="border: none; border-radius: 16px; background-color: #f3fef4;">
                    <img src="@buket.SlikaUrl" class="card-img-top"
                         alt="@buket.Naziv"
                         style="height: 250px; object-fit: cover; border-radius: 16px 16px 0 0;" />
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title text-success fw-bold">@buket.Naziv</h5>
                            <p class="card-text mb-2" style="color: #444;">@buket.Opis</p>
                            <p class="fw-semibold mb-3" style="color: #333;">
                                <strong>Cijena:</strong> @buket.CijenaMali.ToString("0.00") € – @buket.CijenaVeliki.ToString("0.00") €
                            </p>
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Odabir", "Narudzba", new { id = buket.Id })"
                               class="btn btn-outline-success w-100 mt-2">Odaberi</a>
                        }
                        else
                        {
                            <div class="alert alert-info text-center mt-2">
                                Za narudžbu se morate <a href="/Identity/Account/Login">prijaviti</a> ili <a href="/Identity/Account/Register">registrirati</a>.
                            </div>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="d-flex flex-column w-100 mt-3">
                                <a class="btn btn-outline-primary mt-2" href="@Url.Action("Edit", "Buketi", new { id = buket.Id })">Uredi</a>
                                <a class="btn btn-outline-danger mt-2" href="@Url.Action("Delete", "Buketi", new { id = buket.Id })">Obriši</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
